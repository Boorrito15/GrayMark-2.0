<div class="container">
  <h1>Manage <%= @school.name%>'s menus </h1>
  <div>
    <% @week_menus.each do |week_menu| %>
      <br>
      <h3><%= week_menu.date.strftime("%d %B %Y") %> to <%= (week_menu.date+18.days).strftime("%d %B %Y") %></h3>
      <br>
      <div class = "cards">
        <div class = "card">
          <div class ="card-body">
            <% @diet = week_menu.profile.diet %>
            <p> <%= @menu_intolerances.join(', ') %> - <%= @menu_allergies.join(', ') %> free | <%= @diet.name %></p>
            <br><br>
            <%= link_to "View menu", week_menu_path(week_menu), class: "btn btn-primary" %>
          </div>
        </div>
      </div>
      <br><br>
    <% end %>
  </div>
</div>
